
@{
    Layout = null;
}

<h1>Terms & Conditions</h1>

<div class="row">
    <div class="col-lg-6">
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <div class="col-lg-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-model="areAccepted"> Before you proceed, please read and accept the Terms&Conditions.
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary" ng-click="accept()">Proceed</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10">
                        <p class="text-danger">{{error}}</p>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
